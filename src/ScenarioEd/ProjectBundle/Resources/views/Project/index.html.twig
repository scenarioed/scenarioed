{% extends "::base.html.twig" %}
  {% block title %}Projects {% endblock %}

  {% block body %}
    <a href="{{ path('project_new') }}" class="action create">+ Create new project</a>
    <h1>{{ block('title') }}</h1>	
    <p>Click the title of a project to run tests or edit features. Click Edit to change a project's basic information.</p>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a> 


                </td>
                <td>
                    <h2><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.projectname}}</a></h2>
                    <p>{{ entity.repositoryuri }}</p>
                </td>
                <td>
                            <a href="{{ path('project_edit', { 'id': entity.id }) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
