{% extends "::base.html.twig" %}
   {% block title %}Project: Edit{% endblock %}

   {% block body %}
    <a href="{{ path('project') }}" class="action back">&larr; Project list</a>
    <h1><span class="prepend">Project: </span>Edit</h1>
    <p>Set the title, description, and homepage for the site you wish to test.</p>

   <form action="{{ path('project_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <button type="submit" class="action save">Save</button>
    </form>

    <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="action delete">Delete</button>
    </form>

 
  {% endblock %}
